<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/itemLayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="11dp"
                    >

                    <ImageView
                        android:id="@+id/restaurant_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_res1"
                        android:scaleType="fitXY"
                        >

                    </ImageView>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RestaurantName"
                        android:textSize="10pt"
                        android:textStyle="bold"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        >
                        <TextView
                            android:id="@+id/restaurant_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RestaurantType"
                            android:textSize="8pt"
                            android:textAllCaps="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/dollar1"
                                android:layout_width="8pt"
                                android:layout_height="8pt"
                                android:src="@drawable/ic_dollarsign"/>
                            <ImageView
                                android:id="@+id/dollar2"
                                android:layout_width="8pt"
                                android:layout_height="8pt"
                                android:src="@drawable/ic_dollarsign"/>
                            <ImageView
                                android:id="@+id/dollar3"
                                android:layout_width="8pt"
                                android:layout_height="8pt"
                                android:src="@drawable/ic_dollarsign"/>
                            <ImageView
                                android:id="@+id/dollar4"
                                android:layout_width="8pt"
                                android:layout_height="8pt"
                                android:src="@drawable/ic_dollarsign"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/restaurant_status1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="6pt"
                            android:text="Open now"
                            android:textColor="@color/green"/>
                        <TextView
                            android:id="@+id/restaurant_status2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="6pt"
                            android:text=" - 400m from you - TPHCM, Vietnam"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="170dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_circle"
                    />
                <TextView
                    android:id="@+id/restaurant_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </FrameLayout>
        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/restaurant_description"
                android:text="Sublimotion is a restaurant located in Sant Josep de sa Taila, Ibiza, Spain run by Michelin 2-star chef Paco Roncero who ultilizes molecular gastronomy in cooking.Sublimotion is a restaurant located in Sant Josep de sa Taila, Ibiza, Spain run by Michelin 2-star chef Paco Roncero who ultilizes molecular gastronomy in cooking.Sublimotion is a restaurant located in Sant Josep de sa Taila, Ibiza, Spain run by Michelin 2-star chef Paco Roncero who ultilizes molecular gastronomy in cooking.Sublimotion is a restaurant located in Sant Josep de sa Taila, Ibiza, Spain run by Michelin 2-star chef Paco Roncero who ultilizes molecular gastronomy in cooking.Sublimotion is a restaurant located in Sant Josep de sa Taila, Ibiza, Spain run by Michelin 2-star chef Paco Roncero who ultilizes molecular gastronomy in cooking.Sublimotion is a restaurant located in Sant Josep de sa Taila, Ibiza, Spain run by Michelin 2-star chef Paco Roncero who ultilizes molecular gastronomy in cooking"
                android:textSize="8pt"/>
        </ScrollView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                    <ImageView
                        android:src="@drawable/clock_time_inactive"
                        android:id="@+id/res_time_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        />
                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/res_time_text"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8AM-9PM"
                        android:textSize="5pt"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_direct"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/direct_inactive"
                    android:id="@+id/res_location_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/res_location_text"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direct"
                    android:textSize="5pt"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_phone_call"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/phone_call_inactive"
                    android:id="@+id/res_phone_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/res_phone_text"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call now"
                    android:textSize="5pt"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:src="@drawable/bookmarks_inactive"
                    android:id="@+id/res_bookmark_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:id="@+id/res_bookmark_text"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookmark"
                    android:textSize="5pt"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>


